

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="beans.Employee"  schema="david">

    <id name="id"/>
  <property name="name"/>
<property name="email"/>
<property name="salary"/>

<union-subclass name="beans.SEmployee" table="Semployee10" schema="david">

<property name="tool"/>
</union-subclass>

<union-subclass name="beans.HEmployee" table="hemployee10" schema="david">

<property name="wh"/>
</union-subclass>

<union-subclass name="beans.Admin" table="Admin10" schema="david" >

<property name="branchname"/>
</union-subclass>

</class>

</hibernate-mapping>